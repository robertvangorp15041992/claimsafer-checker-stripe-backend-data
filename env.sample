# =============================================================================
# CLAIMSAFER PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/claimsafer

# Stripe Configuration
STRIPE_API_KEY=sk_live_...  # Production Stripe Secret Key
STRIPE_WEBHOOK_SECRET=whsec_...  # Stripe Webhook Signing Secret
STRIPE_PUBLISHABLE_KEY=pk_live_...  # Stripe Publishable Key

# Application Configuration
APP_BASE_URL=https://your-domain.com
ENVIRONMENT=production
SESSION_SECRET=your-super-secure-session-secret-here
JWT_SECRET_KEY=your-super-secure-jwt-secret-here
ONBOARDING_SECRET=your-super-secure-onboarding-secret-here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_FROM_NAME=ClaimSafer

# Security Headers
ENABLE_HSTS=true
CSP=default-src 'self'; img-src 'self' data: https:; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; connect-src 'self'

# Admin Configuration
ADMIN_API_KEY=your-super-secure-admin-api-key-here

# Monitoring & Health Checks
READINESS_STRIPE_CHECK=true
READINESS_SMTP_CHECK=true

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Feature Flags
ENABLE_MAGIC_LINKS=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_CHANGE=true

# External URLs
UPGRADE_URL=https://claimsafer.com/pricing
STRIPE_PORTAL_RETURN_PATH=/billing

# =============================================================================
# DEVELOPMENT OVERRIDES (set ENVIRONMENT=development to use these)
# =============================================================================
# DATABASE_URL=postgresql://localhost:5432/claimsafer_dev
# STRIPE_API_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_test_...
# APP_BASE_URL=http://localhost:8000
